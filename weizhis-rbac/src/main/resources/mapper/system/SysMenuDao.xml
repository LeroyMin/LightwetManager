<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.weizhis.cms.dao.system.SysMenuDao">

    <select id="queryObject" resultType="cn.weizhis.cms.entity.system.SysMenuEntity">
		select * from sys_menu where menu_id = #{value}
	</select>

    <insert id="save" parameterType="cn.weizhis.cms.entity.system.SysMenuEntity">
		insert into sys_menu
		(
			`m_id`,
			`parent_id`, 
			`m_name`,
			`m_url`,
			`perms`, 
			`type`, 
			`m_icon`,
			`order_num`
		)
		values
		(
			#{mId},
			#{parentId}, 
			#{mName},
			#{mUrl},
			#{perms}, 
			#{type}, 
			#{mIcon},
			#{orderNum}
		)
	</insert>

    <select id="queryListParentId" resultType="cn.weizhis.cms.entity.system.SysMenuEntity">
		select * from sys_menu where parent_id = #{parentId} order by order_num asc 
	</select>

    <select id="queryNotButtonList" resultType="cn.weizhis.cms.entity.system.SysMenuEntity">
		select * from sys_menu where type != 2 order by order_num asc 
	</select>

    <select id="queryList" resultType="cn.weizhis.cms.entity.system.SysMenuEntity">
        select m.*,(select p.m_name from sys_menu p where p.m_id = m.parent_id) as parentName
        from sys_menu m
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by m.${sidx} ${order}
            </when>
            <otherwise>
                order by m.order_num asc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <!-- 查询用户的权限列表 -->
    <select id="queryUserList" resultType="cn.weizhis.cms.entity.system.SysMenuEntity">
		select distinct m.*,(select p.m_name from sys_menu p where p.m_id = m.parent_id) as parentName
			from sys_user_role ur 
			LEFT JOIN sys_role_menu rm on ur.role_id = rm.role_id 
			LEFT JOIN sys_menu m on rm.m_id = m.m_id
		where ur.user_id = #{userId} order by m.order_num asc
	</select>

    <select id="queryTotal" resultType="int">
		select count(*) from sys_menu
	</select>

    <update id="update" parameterType="cn.weizhis.cms.entity.system.SysMenuEntity">
        update sys_menu
        <set>
            <if test="parentId != null">`parent_id` = #{parentId}, </if>
            <if test="mName != null">`m_name` = #{mName}, </if>
            <if test="mUrl != null">`m_url` = #{mUrl}, </if>
            <if test="perms != null">`perms` = #{perms}, </if>
            <if test="type != null">`type` = #{type}, </if>
            <if test="mIcon != null">`m_icon` = #{mIcon}, </if>
            <if test="orderNum != null">`order_num` = #{orderNum}</if>
        </set>
        where menu_id = #{mId}
    </update>

    <delete id="deleteBatch">
        delete from sys_menu where m_id in
        <foreach item="mId" collection="array" open="(" separator="," close=")">
            #{mId}
        </foreach>
        ;
        delete from sys_role_menu where m_id in
        <foreach item="mId" collection="array" open="(" separator="," close=")">
            #{mId}
        </foreach>
    </delete>

</mapper>
